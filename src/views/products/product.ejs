<%- include('../partials/head.ejs', {cssSheet: "styles-product"}) %>

<body>

<%- include('../partials/header.ejs') %>

    <main class="main-product">

        <div class="header-main">
            <p class="father-buscador"><input type="text" class="bottom-header-main buscador" placeholder="Buscar"></p>
            <h4 class="top-header-main">Lista de productos</h4>
            <p class="top-header-main filtro">Filtros</p>
     
        </div>

       <section class="estanteDeProductos">

      
        <% products.forEach(product => { %>
         
            <a href="/products/detail/<%= product.id %>"> <div class="cajaDeProducto">
                <section class="cajaDeProductoSuperior">
                    <img src="/img/<%= product.image %>" alt="foto">
                </section>
                <section class="cajaDeProductoInferior">
                    
                    <p class="tipo"><%= product.category.name%></p>
                    <h2 class="titulo"><%= product.name%></h2>
                    <div class="precio">
                        <p>$<%= product.price%></p>
                    </div></a>
                    <button class="boton">Add to cart</button>
                </section>
            </div>

        <% }) %>

       
    </section>
    </main>

    <%- include('../partials/footer.ejs') %>

    
</body>
</html>