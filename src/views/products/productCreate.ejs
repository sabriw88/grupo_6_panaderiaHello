<%- include('../partials/head.ejs') %>

<body class="">
 
<%- include('../partials/header.ejs') %>

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Formulario de creación de productos</h2>
        </div>
    </div>
    <div class="col-12">
        <form action="/products" method="POST">
            <div class="row product-detail">
                <div class="create-imput">
                    <label for="name" class="form-label">Nombre del producto:</label>
                    <input type="text" id="name" name="name" class="form-input">
                </div>
                <div class="create-imput">
                    <label for="description" class="form-label">Descipción:</label>
                    <textarea name="description" id="description" class="form-input"></textarea>
                </div>

                <div class="create-imput">
                    <label for="image" class="form-label">imagen</label>
                    <input type= "file" name="image" id="image" accept=".jpg" class="form-input"></input>
                </div>
                <div class="create-imput">
                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                        <option value="">Elegí</option>
                        <option value="panes">Panes</option>
                        <option value="pasteleria">Pasteleria</option>
                        <option value="delicias">Delicias.</option>
                    </select>
                </div>
                
                <div class="create-imput">
                    <label for="price" class="form-label">Precio del producto:</label>
                    <input type="number" id="price" name="price" class="form-input">
                </div>
                <div class="col-12">
                    <button type="submit" class="buy-now-button">Guardar producto</button>
                </div>
            </div>
        </form>
    </div>

</div>

<%- include('../partials/footer.ejs') %>

</body>
</html>