<%- include('../partials/head.ejs', {cssSheet: "styles-productCreate"}) %>

<body class="body-create">

    <%- include('../partials/header.ejs') %>
    
<div class="main-create">
    <div class="create-img">
        <img src="https://cdn.pixabay.com/photo/2016/11/29/10/09/bakery-1868925_1280.jpg"valt="">
    </div>
    <div class="form-create">
        <form action="/products" method="POST" enctype="multipart/form-data">           
            <div class="row product-detail">
                <h2 class="create-title">Formulario de creación de productos</h2>

                <div class="create-input">
                    <label for="name" class="form-label">Nombre del producto:</label>
                    <input type="text" id="name" name="name" class="form-input"></input>
                </div>

                <div class="create-input">
                    <label for="price" class="form-label">Precio del producto:</label>
                    <input type="number" id="price" name="price" class="form-input">
                </div>

                <div class="create-input">
                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                        <% for(let i=0; i < categorias.length; i++){ %>
                        <option value="<%= categorias[i].id%>"><%=categorias[i].name%></option>
                        <% } %>
                    </select>
                </div>

                <div class="create-input">
                    <label for="stock" class="form-label">Stock:</label>
                    <input type="number" id="stock" name="stock" class="form-input">
                </div>
                
                <div class="create-input">
                    <label for="description" class="form-label">Descripción:</label>
                    <input name="description" id="description" class="form-input"></input>
                </div>

                <div class="create-input">
                    <label for="image" class="form-label">Imagen</label>
                    <input type= "file" name="image" id="image" accept=".jpg" class="form-input"></input>
                </div>
                <div class="col-12">
                    <button type="submit" class="CreateButton">Guardar producto</button>
                </div>
            </div>
        </form>
    </div>

</div>
<%- include('../partials/footer') %>
</body>
</html>