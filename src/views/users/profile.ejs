<%- include('../partials/head.ejs', {cssSheet: "styles-login"}) %>

<body class="body-profile">

<%- include('../partials/header.ejs') %>

    <main class="main-profile">

        <div class="first-section"> 
        <img class="fotoPerfil" src="/img/avatars/<%= user.avatar %>" alt="">
        
        </div>
        <div class="second-section">
        <h2><%= user.name + " " + user.surname%></h2>
        <p><%= user.email %></p><br>

        <a href="/users/edit/<%= user.id %>" class="modifyUser">Editar mis datos</a><br>
        <br>

        <form action="/users/delete/<%= user.id %>?_method=DELETE" method="POST" >
            <button type="submit" class="card_button2" onclick="return confirm('¿Estás seguro que quieres borrar tu usuario?')">Borrar usuario</button>
        </form>

        <div class="nav-perfil">
            <button> Productos </button>
            <button> Últimas compras </button>
            <button> Favoritos </button>
        </div>

    </main>

</body>
</html>